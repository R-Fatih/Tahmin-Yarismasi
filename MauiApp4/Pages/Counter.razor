@page "/counter"
@page "/counter/{LName}"

<h1>Counter</h1>

<p role="status">Current count: @LName</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;
    [Parameter]
    public string? LName { get; set; }
    private void IncrementCount()
    {
        currentCount++;
    }
}
